{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<!-- Contact -->
   
      <div class="container">
        <div class="row">
          <div class="col-md-offset-2 col-md-8">
            <div class="section-heading">
              <h2>Contactez nous</h2>
              <p>Nous vous répondrons dans les meilleurs delais. </p>
            </div>
          </div>
        </div>
  
              <div class="row">

                    {{ form_start(form)}}
                    {{ form_row(form.name, {'attr': {'placeholder': "Votre nom"}})}} 
                    {{ form_row(form.email, {'attr': {'placeholder': "Votre email"}})}} 
                    {{ form_row(form.subject, {'attr': {'placeholder': "Sujet de votre message"}})}}
                    {{ form_row(form.message, {'attr': {'placeholder': "Votre message"}})}}
                    
                          <!-- captcha -->
                          <!-- Notre boite de vérification -->
                          <div class="g-recaptcha" data-sitekey="6LdDO7wUAAAAAGdJHeLw21WKSVXEqVChyrpoWYvQ"></div>  
                          <!-- fin captcha -->
                          
                          <div class="text-center"><button type="submit" class="btn btn-success btn-lg btn-block">Envoyer un message</button></div>
                   
  
                      
                      {{ form_end(form)}}
                    </div>
              </div>
          </div>
      </div>

{% endblock %}
